{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/types",
        // Generate d.ts files
        "declaration": true,
        // go to js file when using IDE functions like "Go to Definition" in VSCode
        "declarationMap": true,
        // only output d.ts files and not JavaScript files.
        "emitDeclarationOnly": true
    }
}